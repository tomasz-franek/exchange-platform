{
  "name": "frontend-client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "coverage": "ng test --no-watch --code-coverage",
    "test-headless": "ng test --watch=false --browsers=ChromeHeadless",
    "generate-full-api": "node scripts/generate-all-apis.ts",
    "generate-common-api": "openapi-generator-cli generate -i ../api-common/src/main/resources/commons.yml -g typescript-angular -o src/app/api",
    "generate-users-api": "openapi-generator-cli generate -i ../api-common/src/main/resources/users.yml -g typescript-angular -o src/app/api",
    "generate-tickets-api": "openapi-generator-cli generate -i ../api-external/src/main/resources/tickets.yml -g typescript-angular -o src/app/api",
    "generate-accounts-api": "openapi-generator-cli generate -i ../api-external/src/main/resources/accounts.yml -g typescript-angular -o src/app/api",
    "generate-dictionaries-api": "openapi-generator-cli generate -i ../api-external/src/main/resources/dictionaries.yml -g typescript-angular -o src/app/api",
    "generate-rates-api": "openapi-generator-cli generate -i ../api-external/src/main/resources/rates.yml -g typescript-angular -o src/app/api",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.13",
    "@angular/common": "^19.2.13",
    "@angular/compiler": "^19.2.13",
    "@angular/core": "^19.2.13",
    "@angular/forms": "^19.2.13",
    "@angular/platform-browser": "^19.2.13",
    "@angular/platform-browser-dynamic": "^19.2.13",
    "@angular/router": "^19.2.13",
    "@ngrx/effects": "^19.2.0",
    "@ngrx/store": "^19.2.0",
    "@ngrx/store-devtools": "^19.2.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@openapitools/openapi-generator-cli": "^2.20.2",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "echarts": "^5.6.0",
    "jasmine-marbles": "^0.9.2",
    "ngx-echarts": "^19.0.0",
    "ngx-toastr": "^19.0.0",
    "rxjs": "^7.8.2",
    "state": "^0.2.0",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "zone.js": "^0.15.1",
    "keycloak-angular": "^19.0.2",
    "keycloak-js": "^26.2.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.13",
    "@angular/cli": "^19.2.13",
    "@angular/compiler-cli": "^19.2.13",
    "@types/jasmine": "^5.1.8",
    "@types/node": "^22.15.21",
    "angular-eslint": "^19.6.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jasmine-core": "^5.7.1",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "ngx-translate-testing": "^7.0.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
